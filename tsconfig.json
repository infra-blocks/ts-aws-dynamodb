{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "lib": ["esnext"],
    "module": "nodenext",
    "noEmit": true,
    "outDir": "./lib/compile",
    "rootDir": "./",
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.json",
    "**/.eslintrc.cjs",
    "**/.mocharc.cjs"
  ],
  "exclude": ["lib/**/*"]
}
